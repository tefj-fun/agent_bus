# Application
DEBUG=true
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000

# Anthropic Claude
ANTHROPIC_API_KEY=your_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_MAX_TOKENS=8192

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_bus
POSTGRES_USER=agent_bus
POSTGRES_PASSWORD=agent_bus_dev_password

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Artifact Storage (decoupled output storage)
# backend: "file" for portable file-based storage, "postgres" for legacy database storage
ARTIFACT_STORAGE_BACKEND=file
ARTIFACT_OUTPUT_DIR=./outputs

# Skills
SKILLS_DIRECTORY=./skills

# ChromaDB (Memory System v2)
CHROMA_PERSIST_DIRECTORY=./data/chroma
# CHROMA_HOST=localhost  # Optional: for client mode
# CHROMA_PORT=8000       # Optional: for client mode

# Workers
MAX_WORKERS=4
