# Application
DEBUG=true
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000
# API_BASE_URL=/  # Base URL for Swagger UI (default: "/" for relative paths)

# Anthropic Claude
ANTHROPIC_API_KEY=your_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_MAX_TOKENS=8192
PRD_MAX_TOKENS=16384  # Higher token limit for PRD generation (default: 16384)

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_bus
POSTGRES_USER=agent_bus
POSTGRES_PASSWORD=agent_bus_dev_password

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Artifact Storage (decoupled output storage)
# backend: "file" for portable file-based storage, "postgres" for legacy database storage
ARTIFACT_STORAGE_BACKEND=file
ARTIFACT_OUTPUT_DIR=./outputs

# Skills
SKILLS_DIRECTORY=./skills

# ChromaDB (Memory System v2)
CHROMA_PERSIST_DIRECTORY=./data/chroma
# CHROMA_HOST=localhost  # Optional: for client mode
# CHROMA_PORT=8000       # Optional: for client mode

# Workers
MAX_WORKERS=4

# Timeouts (in seconds)
TIMEOUT_LLM_CALL=180  # LLM API call timeout (increase for longer PRDs)
TIMEOUT_TASK_COMPLETION=3600  # Max time to wait for a task
TIMEOUT_DB_QUERY=30  # Database query timeout
TIMEOUT_REDIS_OPERATION=10  # Redis operation timeout
